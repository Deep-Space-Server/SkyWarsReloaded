<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.walrusone.skywarsreloaded</groupId>
  <artifactId>SkyWarsReloadedPlugin</artifactId>
  <version>V3.1</version>
  <build>
    <resources>
      <resource>
        <targetPath>.</targetPath>
        <filtering>true</filtering>
        <directory>src/main/resources</directory>
        <includes>
          <include>basicchest.yml</include>
          <include>chest.yml</include>
          <include>config.yml</include>
          <include>config18.yml</include>
          <include>glasscolors.yml</include>
          <include>leaderboards.yml</include>
          <include>killsounds.yml</include>
          <include>killsounds18.yml</include>
          <include>maps.yml</include>
          <include>messages.yml</include>
          <include>opchest.yml</include>
          <include>particleeffects.yml</include>
          <include>playerFile.yml</include>
          <include>plugin.yml</include>
          <include>projectileeffects.yml</include>
          <include>taunts.yml</include>
          <include>taunts18.yml</include>
          <include>winsounds.yml</include>
          <include>winsounds18.yml</include>
          <include>holograms.yml</include>
          <include>tables.sql</include>
        </includes>
      </resource>
    </resources>
    <finalName>SkyWarsReloaded</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>1.4</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <id>placeholderapi</id>
      <url>http://repo.extendedclip.com/content/repositories/placeholderapi/</url>
    </repository>
    <repository>
      <id>mvdw-software</id>
      <name>MVdW Public Repositories</name>
      <url>http://repo.mvdw-software.be/content/groups/public/</url>
    </repository>
    <repository>
      <id>vault-repo</id>
      <url>http://nexus.hc.to/content/repositories/pub_releases</url>
    </repository>
    <repository>
      <id>rayzr-repo</id>
      <url>https://cdn.rawgit.com/Rayzr522/maven-repo/master/</url>
    </repository>
    <repository>
      <id>spigot-repo</id>
      <url>https://hub.spigotmc.org/nexus/content/repositories/snapshots/</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>net.milkbowl.vault</groupId>
      <artifactId>VaultAPI</artifactId>
      <version>1.6</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>me.clip</groupId>
      <artifactId>placeholderapi</artifactId>
      <version>2.8.2</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.bukkit</groupId>
      <artifactId>bukkit</artifactId>
      <version>1.8-R0.1</version>
      <scope>system</scope>
      <systemPath>D:\Russell\Spigot_Development\Workspace\swr-parent\SkyWarsReloaded/lib/craftbukkit-1.8.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>org.spigotmc</groupId>
      <artifactId>spigot</artifactId>
      <version>1.9-R0.1-SNAPSHOT</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>com.gmail.filoghost</groupId>
      <artifactId>holograaphicdisplays</artifactId>
      <version>latest</version>
      <scope>system</scope>
      <systemPath>D:\Russell\Spigot_Development\Workspace\swr-parent\SkyWarsReloaded/lib/HolographicDisplaysAPI.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>com.sainttx.holograms</groupId>
      <artifactId>holograms-api</artifactId>
      <version>latest</version>
      <scope>system</scope>
      <systemPath>D:\Russell\Spigot_Development\Workspace\swr-parent\SkyWarsReloaded/lib/Holograms-2.5.0-SNAPSHOT.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>be.maximvdw</groupId>
      <artifactId>MVdWPlaceholderAPI</artifactId>
      <version>2.3.1-SNAPSHOT</version>
      <scope>provided</scope>
      <exclusions>
        <exclusion>
          <artifactId>MVdWUpdater</artifactId>
          <groupId>be.maximvdw</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
  <properties>
    <maven.compiler.source>1.8</maven.compiler.source>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <maven.compiler.target>1.8</maven.compiler.target>
  </properties>
</project>

